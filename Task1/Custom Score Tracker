#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of players: ";
    cin >> n;
    int *scores = new int[n];
    for (int i = 0; i < n; i++) {
        cout << "Enter score of player " << (i + 1) << ": ";
        cin >> *(scores + i);
    }
    cout << "\nScores:\n";
    for (int i = 0; i < n; i++) {
        cout << "Player " << (i + 1) << " Score = " << *(scores + i) << endl;
    }

    delete[] scores;

    return 0;
}
