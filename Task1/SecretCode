#include <iostream>

using namespace std;

void stealthFactorial(int n, unsigned long long *covertResult) {
    *covertResult = 1;
    for (int i = 1; i <= n; i++) {
        *covertResult *= i; 
    }
}

int main() {
    int num;
    unsigned long long secretFact; 

    cout << "Enter a number for Operation Factorial Stealth: ";
    cin >> num;
    if (num < 0) {
        cout << "Mission aborted: Factorial not defined for negative numbers." << endl;
        return 1;
    }
    stealthFactorial(num, &secretFact);

    cout << "Mission complete: Factorial of " << num << " is " << secretFact << endl;

    return 0;
}
