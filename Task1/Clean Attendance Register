#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of participants: ";
    cin >> n;
    int *attendance = new int[n];
    for (int i = 0; i < n; i++) {
        *(attendance + i) = 0;
    }

    int presentCount;
    cout << "How many participants are present? ";
    cin >> presentCount;

    cout << "Enter their participant numbers (1 - " << n << "):\n";
    for (int i = 0; i < presentCount; i++) {
        int index;
        cin >> index;
        if (index >= 1 && index <= n) {
            *(attendance + (index - 1)) = 1;
        }
    }
    cout << "\nFinal Attendance Register:\n";
    for (int i = 0; i < n; i++) {
        cout << "Participant " << (i + 1) << ": " 
             << (*(attendance + i) == 1 ? "Present" : "Absent") << endl;
    }

    delete[] attendance;

    return 0;
}
